<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

        <main>
            <% if(products.length > 0) { %>
                <ul>
                    <% products.forEach(prod => { %>
                        <li>
                            <p><%= prod.productData.title %>: <%= prod.qty %>pcs</p>
                        </li>
                    <% }); %>
                </ul>

            <% } else {%>
                <h1>Your cart is empty.</h1>
            <% } %>

        </main>

        <%- include('../includes/end.ejs') %>